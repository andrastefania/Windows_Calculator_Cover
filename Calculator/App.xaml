<Application x:Class="Calculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Calculator"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="CalculatorButton" TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="#fdb8ff"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#7956a3"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#fee8ff"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OperatorButton" TargetType="Button" BasedOn="{StaticResource CalculatorButton}">
            <Setter Property="Background" Value="#fdb8ff"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#fee8ff"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EqualsButton" TargetType="Button" BasedOn="{StaticResource CalculatorButton}">
            <Setter Property="Background" Value="#5d457a"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#9b399e"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ProgrammerButton" TargetType="Button" BasedOn="{StaticResource CalculatorButton}">
            <Setter Property="Background" Value="#fdb8ff"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#fee8ff"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>

</Application>
